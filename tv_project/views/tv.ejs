<div class="tv-detail-container">
    <!-- Хлебные крошки -->
    <div class="breadcrumbs">
        <a href="/"><i class="fas fa-home"></i> Главная</a>
        <i class="fas fa-chevron-right"></i>
        <span><%= tv.title %></span>
    </div>
    
    <!-- Основная информация о телевизоре -->
    <div class="tv-detail-main">
        <div class="tv-detail-image">
            <img src="<%= tv.image || '/images/tv.png' %>" alt="<%= tv.title %>" 
                 onerror="this.src='/images/tv.png'">
            <div class="tv-badge-large">
                <i class="fas fa-tv"></i> <%= tv.brand %>
            </div>
        </div>
        
        <div class="tv-detail-info">
            <h1 class="tv-detail-title"><%= tv.title %></h1>
            
            <div class="tv-price-large">
                <i class="fas fa-tag"></i>
                <span class="price"><%= tv.price.toLocaleString('ru-RU') %> ₽</span>
            </div>
            
            <div class="tv-specs-grid">
                <div class="spec-item">
                    <div class="spec-icon">
                        <i class="fas fa-expand-alt"></i>
                    </div>
                    <div class="spec-content">
                        <div class="spec-label">Диагональ</div>
                        <div class="spec-value"><%= tv.diagonal %> дюймов</div>
                    </div>
                </div>
                
                <div class="spec-item">
                    <div class="spec-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <div class="spec-content">
                        <div class="spec-label">Технология</div>
                        <div class="spec-value"><%= tv.display_technology %></div>
                    </div>
                </div>
                
                <div class="spec-item">
                    <div class="spec-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <div class="spec-content">
                        <div class="spec-label">Энергопотребление</div>
                        <div class="spec-value"><%= tv.energy_class %></div>
                    </div>
                </div>
                
                <div class="spec-item">
                    <div class="spec-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="spec-content">
                        <div class="spec-label">Добавлен</div>
                        <div class="spec-value">
                            <%= tv.created_at ? tv.created_at.toLocaleDateString('ru-RU') : 'Недавно' %>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Особенности -->
            <div class="tv-features-section">
                <h3><i class="fas fa-star"></i> Особенности и функции</h3>
                <% if (tv.features && tv.features.length > 0) { %>
                    <div class="features-grid">
                        <% tv.features.forEach(function(feature, index) { %>
                            <div class="feature-item">
                                <div class="feature-number"><%= index + 1 %></div>
                                <div class="feature-text"><%= feature %></div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="no-features">Особенности не указаны</p>
                <% } %>
            </div>
            
            <!-- Кнопки действий -->
            <div class="tv-actions-large">
                <a href="/" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
                <button class="btn-compare">
                    <i class="fas fa-balance-scale"></i> Сравнить
                </button>
                <button class="btn-favorite">
                    <i class="far fa-heart"></i> В избранное
                </button>
            </div>
        </div>
    </div>
    
    <!-- Похожие телевизоры -->
    <% if (similarTvs && similarTvs.length > 0) { %>
        <div class="similar-tvs">
            <h3><i class="fas fa-random"></i> Другие модели <%= tv.brand %></h3>
            <div class="similar-grid">
                <% similarTvs.forEach(function(similar) { %>
                    <div class="similar-card">
                        <div class="similar-image">
                            <img src="<%= similar.image || '/images/tv.png' %>" 
                                 alt="<%= similar.title %>"
                                 onerror="this.src='/images/tv.png'">
                        </div>
                        <div class="similar-info">
                            <h4><a href="/tv/<%= similar.nick %>"><%= similar.title %></a></h4>
                            <div class="similar-price">
                                <i class="fas fa-tag"></i> <%= similar.price.toLocaleString('ru-RU') %> ₽
                            </div>
                            <a href="/tv/<%= similar.nick %>" class="btn-view">
                                <i class="fas fa-eye"></i> Смотреть
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
    
    <!-- Технические характеристики -->
    <div class="tech-specs">
        <h3><i class="fas fa-cogs"></i> Технические характеристики</h3>
        <div class="specs-table">
            <div class="spec-row">
                <div class="spec-name">Бренд</div>
                <div class="spec-value"><%= tv.brand %></div>
            </div>
            <div class="spec-row">
                <div class="spec-name">Диагональ экрана</div>
                <div class="spec-value"><%= tv.diagonal %> дюймов</div>
            </div>
            <div class="spec-row">
                <div class="spec-name">Технология экрана</div>
                <div class="spec-value"><%= tv.display_technology %></div>
            </div>
            <div class="spec-row">
                <div class="spec-name">Класс энергопотребления</div>
                <div class="spec-value"><%= tv.energy_class %></div>
            </div>
            <div class="spec-row">
                <div class="spec-name">Количество функций</div>
                <div class="spec-value"><%= tv.features ? tv.features.length : 0 %></div>
            </div>
            <div class="spec-row">
                <div class="spec-name">Цена</div>
                <div class="spec-value price-spec"><%= tv.price.toLocaleString('ru-RU') %> ₽</div>
            </div>
        </div>
    </div>
</div>

<style>
    .tv-detail-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .breadcrumbs {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #6b7280;
        margin-bottom: 30px;
        font-size: 0.9em;
    }
    
    .breadcrumbs a {
        color: #3b82f6;
        text-decoration: none;
        transition: color 0.3s;
    }
    
    .breadcrumbs a:hover {
        color: #2563eb;
        text-decoration: underline;
    }
    
    .breadcrumbs i {
        font-size: 0.8em;
    }
    
    .tv-detail-main {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-bottom: 50px;
    }
    
    @media (max-width: 992px) {
        .tv-detail-main {
            grid-template-columns: 1fr;
        }
    }
    
    .tv-detail-image {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        height: 500px;
    }
    
    .tv-detail-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .tv-badge-large {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(37, 99, 235, 0.95);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1em;
        display: flex;
        align-items: center;
        gap: 8px;
        backdrop-filter: blur(10px);
    }
    
    .tv-detail-info {
        padding: 20px 0;
    }
    
    .tv-detail-title {
        color: #1f2937;
        font-size: 2.5em;
        margin-bottom: 20px;
        line-height: 1.2;
    }
    
    .tv-price-large {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e5e7eb;
    }
    
    .tv-price-large i {
        font-size: 2em;
        color: #10b981;
    }
    
    .tv-price-large .price {
        font-size: 2.5em;
        font-weight: bold;
        color: #10b981;
    }
    
    .tv-specs-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .spec-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background: #f9fafb;
        border-radius: 15px;
        transition: transform 0.3s, background 0.3s;
    }
    
    .spec-item:hover {
        transform: translateY(-3px);
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .spec-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        border-radius: 12px;
        font-size: 1.3em;
    }
    
    .spec-content {
        flex: 1;
    }
    
    .spec-label {
        color: #6b7280;
        font-size: 0.9em;
        margin-bottom: 5px;
    }
    
    .spec-value {
        color: #1f2937;
        font-size: 1.2em;
        font-weight: 600;
    }
    
    .tv-features-section {
        margin: 40px 0;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 2px solid #e5e7eb;
    }
    
    .tv-features-section h3 {
        color: #1f2937;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.4em;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 15px;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: #f3f4f6;
        border-radius: 10px;
        transition: transform 0.3s;
    }
    
    .feature-item:hover {
        transform: translateY(-2px);
        background: #e5e7eb;
    }
    
    .feature-number {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
        border-radius: 50%;
        font-weight: bold;
        font-size: 0.9em;
    }
    
    .feature-text {
        flex: 1;
        color: #4b5563;
        font-size: 0.95em;
    }
    
    .no-features {
        text-align: center;
        color: #9ca3af;
        font-style: italic;
        padding: 20px;
    }
    
    .tv-actions-large {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
    
    .btn-back, .btn-compare, .btn-favorite {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 18px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1em;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .btn-back {
        background: #f3f4f6;
        color: #374151;
        text-decoration: none;
    }
    
    .btn-back:hover {
        background: #e5e7eb;
        transform: translateY(-2px);
    }
    
    .btn-compare {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }
    
    .btn-compare:hover {
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(37, 99, 235, 0.3);
    }
    
    .btn-favorite {
        background: linear-gradient(135deg, #ec4899, #db2777);
        color: white;
    }
    
    .btn-favorite:hover {
        background: linear-gradient(135deg, #db2777, #be185d);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(219, 39, 119, 0.3);
    }
    
    .similar-tvs {
        margin: 50px 0;
        padding: 40px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
    
    .similar-tvs h3 {
        color: #1f2937;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.5em;
    }
    
    .similar-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
    }
    
    .similar-card {
        background: #f9fafb;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s;
        border: 2px solid #e5e7eb;
    }
    
    .similar-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }
    
    .similar-image {
        height: 150px;
        overflow: hidden;
    }
    
    .similar-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }
    
    .similar-card:hover .similar-image img {
        transform: scale(1.05);
    }
    
    .similar-info {
        padding: 20px;
    }
    
    .similar-info h4 {
        margin: 0 0 10px 0;
        font-size: 1.1em;
        line-height: 1.4;
    }
    
    .similar-info h4 a {
        color: #1f2937;
        text-decoration: none;
        transition: color 0.3s;
    }
    
    .similar-info h4 a:hover {
        color: #3b82f6;
    }
    
    .similar-price {
        color: #10b981;
        font-weight: bold;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    
    .btn-view {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-view:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
    }
    
    .tech-specs {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        border: 2px solid #e5e7eb;
    }
    
    .tech-specs h3 {
        color: #1f2937;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.5em;
    }
    
    .specs-table {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
    }
    
    .spec-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .spec-row:last-child {
        border-bottom: none;
    }
    
    .spec-row:nth-child(even) {
        background: #f9fafb;
    }
    
    .spec-name, .spec-value {
        padding: 20px;
        font-size: 1em;
    }
    
    .spec-name {
        color: #4b5563;
        font-weight: 500;
        border-right: 1px solid #e5e7eb;
    }
    
    .spec-value {
        color: #1f2937;
        font-weight: 600;
    }
    
    .price-spec {
        color: #10b981;
        font-size: 1.2em;
    }
    
    @media (max-width: 768px) {
        .tv-detail-title {
            font-size: 1.8em;
        }
        
        .tv-price-large .price {
            font-size: 1.8em;
        }
        
        .tv-specs-grid {
            grid-template-columns: 1fr;
        }
        
        .tv-actions-large {
            flex-direction: column;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
        }
        
        .similar-grid {
            grid-template-columns: 1fr;
        }
        
        .spec-row {
            grid-template-columns: 1fr;
        }
        
        .spec-name {
            border-right: none;
            border-bottom: 1px solid #e5e7eb;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Добавление в сравнение
        document.querySelector('.btn-compare').addEventListener('click', function() {
            const tvTitle = '<%= tv.title %>';
            alert(`Телевизор "${tvTitle}" добавлен в сравнение!`);
            this.innerHTML = '<i class="fas fa-check"></i> В сравнении';
            this.style.background = 'linear-gradient(135deg, #10b981, #059669)';
            this.disabled = true;
        });
        
        // Добавление в избранное
        document.querySelector('.btn-favorite').addEventListener('click', function() {
            const tvTitle = '<%= tv.title %>';
            const icon = this.querySelector('i');
            
            if (icon.classList.contains('far')) {
                icon.classList.remove('far');
                icon.classList.add('fas');
                alert(`Телевизор "${tvTitle}" добавлен в избранное!`);
            } else {
                icon.classList.remove('fas');
                icon.classList.add('far');
                alert(`Телевизор "${tvTitle}" удален из избранного!`);
            }
        });
    });
</script>